#!/bin/sh
printstats(){
    printf "SSD: %s RAM: %s%% VOL: %s BRIGHT: %.0f%% BAT0: %s%% %s"\
        "$(df | grep "/$" | awk '{print $5}')"\
	    "$(free | sed '2q;d' | awk '{print int((1 - $7 / $2) * 100)}')"\
	    "$(pactl list sinks | grep "Volume: front" | awk '{print $5}')"\
	    "$(xbacklight -getf)"\
	    "$(cat /sys/class/power_supply/BAT0/capacity)"\
	    "$(date +"%A %F %R")"
}
while pidof dwm > /dev/null
do
    xsetroot -name "$(printstats)"
    sleep 2
done
